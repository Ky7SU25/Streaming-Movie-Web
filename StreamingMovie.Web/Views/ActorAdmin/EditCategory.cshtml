@{
    Layout = null;
}
@model StreamingMovie.Web.Views.ActorAdmin.ViewModels.CategoryDto;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Author - Argon Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-gradient: linear-gradient(87deg, #5e72e4 0, #825ee4 100%);
            --primary-color: #5e72e4;
            --secondary-color: #8392ab;
            --success-color: #2dce89;
            --info-color: #11cdef;
            --warning-color: #fb6340;
            --danger-color: #f5365c;
        }

        body {
            background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%);
            min-height: 100vh;
            font-family: 'Open Sans', sans-serif;
        }

        .main-content {
            padding: 2rem 0;
        }

        .card {
            border: 0;
            box-shadow: 0 15px 35px rgba(50, 50, 93, 0.1), 0 5px 15px rgba(0, 0, 0, 0.07);
            border-radius: 0.375rem;
        }

        .card-header {
            background: transparent;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            padding: 1.5rem;
        }

            .card-header h3 {
                font-size: 1.25rem;
                font-weight: 600;
                margin: 0;
                color: #32325d;
            }

        .form-control {
            border: 1px solid #cad1d7;
            border-radius: 0.375rem;
            padding: 0.625rem 0.75rem;
            font-size: 0.875rem;
            transition: all 0.2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(94, 114, 228, 0.25);
            }

        .form-label {
            font-size: 0.875rem;
            font-weight: 600;
            color: #32325d;
            margin-bottom: 0.5rem;
        }

        .btn-primary {
            background: var(--primary-gradient);
            border: none;
            border-radius: 0.375rem;
            padding: 0.625rem 1.25rem;
            font-weight: 600;
            font-size: 0.875rem;
            transition: all 0.15s ease;
        }

            .btn-primary:hover {
                transform: translateY(-1px);
                box-shadow: 0 7px 14px rgba(50, 50, 93, 0.1), 0 3px 6px rgba(0, 0, 0, 0.08);
            }

        .btn-outline-secondary {
            border-color: #cad1d7;
            color: var(--secondary-color);
            border-radius: 0.375rem;
            padding: 0.625rem 1.25rem;
            font-weight: 600;
            font-size: 0.875rem;
        }

            .btn-outline-secondary:hover {
                background-color: #f8f9fe;
                border-color: var(--secondary-color);
                color: var(--secondary-color);
            }

        .form-select {
            border: 1px solid #cad1d7;
            border-radius: 0.375rem;
            padding: 0.625rem 0.75rem;
            font-size: 0.875rem;
        }

            .form-select:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(94, 114, 228, 0.25);
            }

        .input-group-text {
            background-color: #f8f9fe;
            border-color: #cad1d7;
            color: var(--secondary-color);
        }

        .header-title {
            color: white;
            text-align: center;
            margin-bottom: 2rem;
        }

            .header-title h1 {
                font-size: 2rem;
                font-weight: 600;
                margin-bottom: 0.5rem;
            }

            .header-title p {
                opacity: 0.8;
                font-size: 1rem;
            }

        .file-upload-wrapper {
            position: relative;
            display: inline-block;
            width: 100%;
        }

        .file-upload-input {
            position: absolute;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        .file-upload-label {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            border: 2px dashed #cad1d7;
            border-radius: 0.375rem;
            background-color: #f8f9fe;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .file-upload-label:hover {
                border-color: var(--primary-color);
                background-color: rgba(94, 114, 228, 0.05);
            }

        .file-upload-text {
            text-align: center;
            color: var(--secondary-color);
        }

        .file-upload-icon {
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="container">
            <div class="header-title">
                <h1><i class="fas fa-user-plus me-2"></i>Add New Actor</h1>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="card">
                        <div class="card-header">
                            <h3><i class="fas fa-edit me-2"></i>Actor Information</h3>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="EditCategory" asp-controller="ActorAdmin" enctype="multipart/form-data" method="post">

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="Name" class="form-label">
                                            <i class="fas fa-user me-1"></i>Name
                                        </label>
                                        <input type="text" class="form-control" id="firstName" name="Name" value="@Model.Name" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="Description" class="form-label">
                                        <i class="fas fa-align-left me-1"></i>Description
                                    </label>
                                    <textarea class="form-control" id="biography" name="Description" rows="3" placeholder="Brief description of the author's background and achievements">@Model.Description</textarea>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="Slug" class="form-label">
                                            <i class="fas fa-user me-1"></i>Slug
                                        </label>
                                        <input type="text" class="form-control" id="firstName" name="Slug" value="@Model.Slug" required>
                                    </div>
                                </div>
                                

                                <div class="d-flex justify-content-end gap-2">
                                    <a type="button" class="btn btn-outline-secondary" asp-action="CategoryList" asp-controller="ActorAdmin">
                                        <i class="fas fa-times me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>Update Category
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>