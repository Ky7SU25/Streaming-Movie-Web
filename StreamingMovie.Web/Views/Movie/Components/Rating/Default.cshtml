@using StreamingMovie.Application.Common.Pagination
@using StreamingMovie.Application.DTOs
@model PagedResult<RatingResponseDTO>

@foreach (var rating in Model.Items)
{
    var createdAt = rating.CreatedAt ?? DateTime.MinValue;
    var now = DateTime.Now;
    var timeSpan = now - createdAt;
    string displayTime;

    if (createdAt.Date == now.Date)
    {
        if (timeSpan.TotalMinutes < 1)
        {
            displayTime = "Just now";
        }
        else if (timeSpan.TotalMinutes < 60)
        {
            displayTime = $"{(int)timeSpan.TotalMinutes} minutes ago";
        }
        else
        {
            displayTime = $"{(int)timeSpan.TotalHours} hours ago";
        }
    }
    else
    {
        displayTime = createdAt.ToString("dd/MM/yyyy HH:mm");
    }

    <div class="anime__review__item mb-3">
        <div class="anime__review__item__pic">
            <img src="@rating.AvatarUrl" alt="">
        </div>
        <div class="anime__review__item__text">
            <!-- Row chứa tên và nút dropdown -->
            <div class="d-flex justify-content-between align-items-start">
                <h6 class="mb-1">@rating.FullName - <span>@displayTime</span></h6>
                <div class="dropdown">
                    <button class="btn btn-link text-dark p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="min-width: 120px; font-size: 0.85rem; padding: 0.25rem 0.5rem;">
                        <li style="display: flex; gap: 8px; justify-content: center; align-items: center;">
                            <a href="#" class="text-primary" href="#" data-bs-toggle="modal"
                               data-bs-target="#editModal-@rating.Id">Edit</a>
                            <a href="#" class="text-danger" href="#" data-bs-toggle="modal"
                               data-bs-target="#deleteModal-@rating.Id">Delete</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Sao và review -->
            <div class="rating mb-2">
                <a><i class="fa fa-star text-warning"> @rating.RatingValue</i></a>
            </div>
            <p>@rating.Review</p>
        </div>
    </div>

    <!-- Edit Rating Modal -->
    <div class="modal fade" id="editModal-@rating.Id" tabindex="-1" aria-labelledby="editRatingModalLabel-@rating.Id" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-4" style="background-color: #0b122a; border-radius: 16px;">
                <div class="modal-header border-0">
                    <h5 class="modal-title text-white" id="editRatingModalLabel-@rating.Id">✏️ Edit Your Review</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="Update" asp-controller="Rating" method="post">
                    <div class="modal-body text-white">
                        <input type="hidden" name="Id" value="@rating.Id" />

                        <!-- Số sao -->
                        <div class="mb-3">
                            <label class="form-label">Your Rating</label>
                            <div class="star-rating d-flex gap-1 fs-5 flex-wrap" id="editStarRating-@rating.Id">
                                @for (int i = 1; i <= 10; i++)
                                {
                                    var filled = i <= rating.RatingValue;
                                    var starClass = filled ? "fa-star" : "fa-star-o";
                                    <i class="fa @starClass star mr-2" data-value="@i" style="cursor: pointer;"></i>
                                }
                                <input type="hidden" name="RatingValue" value="@rating.RatingValue" />
                            </div>
                        </div>

                        <!-- Nội dung review -->
                        <div class="mb-3">
                            <label class="form-label">Review</label>
                            <textarea class="form-control" name="Review" rows="3">@rating.Review</textarea>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="submit" class="site-btn">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal-@rating.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@rating.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content rounded-4">
                <form method="post" action="/Rating/Delete">
                    <div class="modal-header bg-danger text-white rounded-top-4">
                        <h5 class="modal-title" id="deleteModalLabel-@rating.Id">
                            <i class="fa fa-exclamation-triangle me-2"></i> Confirm Delete
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body text-center">
                        <input type="hidden" name="RatingId" value="@rating.Id" />
                        <p>Are you sure you want to delete this review</p>
                        <p class="text-muted fst-italic">"@rating.Review"</p>
                    </div>

                    <div class="modal-footer d-flex justify-content-center">
                        <button type="submit" class="btn btn-danger px-4 rounded-pill">
                            <i class="fa fa-trash me-1"></i> Delete
                        </button>
                        <button type="button" class="btn btn-outline-secondary px-4 rounded-pill" data-bs-dismiss="modal">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

}
