@{
	Layout = null;
}
@using StreamingMovie.Web.Views.UserProfile.ViewModels;
@model UserProfileViewModel
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile - Anime Streaming</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-red: #dc2626;
            --dark-bg: #0f172a;
            --card-bg: #1e293b;
            --text-primary: #ffffff;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --success-green: #10b981;
            --warning-yellow: #f59e0b;
        }

        body {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: var(--text-primary);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        /* Header Navigation */
        .navbar {
            background: var(--dark-bg) !important;
            border-bottom: 1px solid var(--border-color);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-primary) !important;
        }

            .navbar-brand .text-danger {
                color: var(--primary-red) !important;
            }

        .nav-link {
            color: var(--text-secondary) !important;
            font-weight: 500;
            margin: 0 0.5rem;
            transition: color 0.3s ease;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--text-primary) !important;
            }

        .btn-upgrade {
            background: var(--primary-red);
            color: white;
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-upgrade:hover {
                background: #b91c1c;
                transform: translateY(-2px);
            }

        /* Profile Container */
        .profile-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .profile-header {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
        }

            .profile-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 100px;
                background: linear-gradient(45deg, var(--primary-red), #f59e0b);
                opacity: 0.1;
            }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid var(--primary-red);
            object-fit: cover;
            margin-bottom: 1rem;
            position: relative;
            z-index: 2;
        }

        .profile-info h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .profile-email {
            color: var(--text-secondary);
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        .subscription-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        .badge-free {
            background: var(--border-color);
            color: var(--text-secondary);
        }

        .badge-plus {
            background: var(--success-green);
            color: white;
        }

        .badge-pro {
            background: linear-gradient(45deg, var(--primary-red), var(--warning-yellow));
            color: white;
        }

        /* Profile Cards */
        .profile-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
        }

        .profile-card {
            background: var(--card-bg);
            border-radius: 15px;
            padding: 2rem;
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
        }

            .profile-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            }

        .card-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .card-title i {
                color: var(--primary-red);
            }

        .info-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--border-color);
        }

            .info-item:last-child {
                border-bottom: none;
            }

        .info-label {
            color: var(--text-secondary);
            font-weight: 500;
        }

        .info-value {
            color: var(--text-primary);
            font-weight: 600;
        }

        .status-active {
            color: var(--success-green);
        }

        .status-inactive {
            color: var(--primary-red);
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary-action {
            background: var(--primary-red);
            color: white;
        }

            .btn-primary-action:hover {
                background: #b91c1c;
                transform: translateY(-2px);
                color: white;
            }

        .btn-secondary-action {
            background: transparent;
            color: var(--text-secondary);
            border: 1px solid var(--border-color);
        }

            .btn-secondary-action:hover {
                background: var(--border-color);
                color: var(--text-primary);
            }

        /* Progress Bar */
        .subscription-progress {
            margin-top: 1rem;
        }

        .progress {
            height: 8px;
            background: var(--border-color);
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-bar {
            background: linear-gradient(45deg, var(--success-green), var(--primary-red));
            transition: width 0.3s ease;
        }

        
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="#">
                Ani<span class="text-danger">me</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Homepage</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Categories" asp-controller="Category">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Blogs" asp-controller="Blog">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Contact" asp-controller="Contact">Contacts</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center gap-3">
                    <a class="btn btn-upgrade" asp-action="PaymentChoice" asp-controller="Payment">Upgrade</a>
                    <i class="fas fa-search text-secondary"></i>
                    <div class="dropdown">
                        <i class="fas fa-user text-secondary dropdown-toggle" data-bs-toggle="dropdown" style="cursor: pointer;"></i>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item active" asp-action="UserProfile" asp-controller="UserProfile">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            @if (User.Identity.IsAuthenticated)
                                {
                                <form asp-action="Logout" asp-controller="Account" method="post" class="dropdown-item m-0 p-0">
                                    <button type="submit" class="btn w-100 text-start">Logout</button>
                                </form>
                                }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Profile Content -->
    <div class="profile-container">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="row align-items-center">
                <div class="col-md-3 text-center text-md-start">
                    <img src="@Model.AvatarUrl" alt="User Avatar" class="profile-avatar">
                </div>
                <div class="col-md-9">
                    <div class="profile-info">
                        <h2>@Model.FullName</h2>
                        <p class="profile-email">@Model.CreatedAt</p>
                        <span class="subscription-badge badge-plus">@Model.SubscriptionType</span>

                        <!-- Subscription Progress -->
                        <div class="subscription-progress">
                            <div class="d-flex justify-content-between mb-2">
                                <small class="text-secondary">Subscription Progress</small>
                                <small class="text-secondary">75% remaining</small>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" style="width: 75%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Cards -->
        <div class="profile-cards">
            <!-- Account Information -->
            <div class="profile-card">
                <h3 class="card-title">
                    <i class="fas fa-user"></i>
                    Thông tin tài khoản
                </h3>
                <div class="info-item">
                    <span class="info-label">Họ và tên</span>
                    <span class="info-value">@Model.FullName</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Email</span>
                    <span class="info-value">nguyenvanan@email.com</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Số điện thoại</span>
                    <span class="info-value">+84 123 456 789</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Trạng thái</span>
                    <span class="info-value status-active">
                        <i class="fas fa-check-circle"></i> @Model.IsActive
                    </span>
                </div>
                <div class="info-item">
                    <span class="info-label">Ngày tham gia</span>
                    <span class="info-value">@Model.CreatedAt.Value.ToString("dd/MM/yyyy")</span>
                </div>
            </div>

            <!-- Subscription Information -->
            <div class="profile-card">
                <h3 class="card-title">
                    <i class="fas fa-crown"></i>
                    Thông tin gói đăng ký
                </h3>
                <div class="info-item">
                    <span class="info-label">Gói hiện tại</span>
                    <span class="info-value">@Model.SubscriptionType</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Giá</span>
                    <span class="info-value">50k/tháng</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Ngày bắt đầu</span>
                    <span class="info-value">@Model.SubscriptionStartDate</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Ngày hết hạn</span>
                    <span class="info-value">@Model.SubscriptionEndDate</span>
                </div>
                
            </div>

            <!-- Viewing Statistics -->
            <div class="profile-card">
                <h3 class="card-title">
                    <i class="fas fa-chart-bar"></i>
                    Thống kê xem phim
                </h3>
                <div class="info-item">
                    <span class="info-label">Tổng thời gian xem</span>
                    <span class="info-value">156 giờ</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Phim đã xem</span>
                    <span class="info-value">47 bộ phim</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Thể loại yêu thích</span>
                    <span class="info-value">Action, Drama</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Đánh giá trung bình</span>
                    <span class="info-value">
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="far fa-star text-warning"></i>
                        4.2/5
                    </span>
                </div>
            </div>

            <!-- Security Settings -->
            <div class="profile-card">
                <h3 class="card-title">
                    <i class="fas fa-shield-alt"></i>
                    Bảo mật & Quyền riêng tư
                </h3>
                <div class="info-item">
                    <span class="info-label">Xác thực 2 bước</span>
                    <span class="info-value status-active">
                        <i class="fas fa-check-circle"></i> Đã bật
                    </span>
                </div>
                <div class="info-item">
                    <span class="info-label">Đăng nhập lần cuối</span>
                    <span class="info-value">Hôm nay, 14:30</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Thiết bị đăng nhập</span>
                    <span class="info-value">3 thiết bị</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Quyền riêng tư</span>
                    <span class="info-value">Riêng tư</span>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <a asp-action="EditUserProfile" asp-controller="UserProfile" class="btn-action btn-primary-action">
                <i class="fas fa-edit"></i>
                Chỉnh sửa hồ sơ
            </a>
            <a href="#" class="btn-action btn-primary-action">
                <i class="fas fa-crown"></i>
                Nâng cấp gói
            </a>
            <a href="#" class="btn-action btn-secondary-action">
                <i class="fas fa-cog"></i>
                Cài đặt
            </a>
            <a href="#" class="btn-action btn-secondary-action">
                <i class="fas fa-history"></i>
                Lịch sử xem
            </a>
            <a href="#" class="btn-action btn-secondary-action">
                <i class="fas fa-heart"></i>
                Danh sách yêu thích
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>