@{
	Layout = null;
}
@using StreamingMovie.Web.Views.UserProfile.ViewModels
@model EditUserViewModel
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - Anime Streaming</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-red: #dc2626;
            --dark-bg: #0f172a;
            --card-bg: #1e293b;
            --text-primary: #ffffff;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --success-green: #10b981;
            --warning-yellow: #f59e0b;
            --input-bg: #334155;
        }

        body {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: var(--text-primary);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        /* Header Navigation */
        .navbar {
            background: var(--dark-bg) !important;
            border-bottom: 1px solid var(--border-color);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-primary) !important;
        }

        .navbar-brand .text-danger {
            color: var(--primary-red) !important;
        }

        .nav-link {
            color: var(--text-secondary) !important;
            font-weight: 500;
            margin: 0 0.5rem;
            transition: color 0.3s ease;
        }

        .nav-link:hover, .nav-link.active {
            color: var(--text-primary) !important;
        }

        .btn-upgrade {
            background: var(--primary-red);
            color: white;
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-upgrade:hover {
            background: #b91c1c;
            transform: translateY(-2px);
        }

        /* Edit Profile Container */
        .edit-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .page-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: linear-gradient(45deg, var(--text-primary), var(--primary-red));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-subtitle {
            color: var(--text-secondary);
            font-size: 1.1rem;
        }

        /* Form Styling */
        .edit-form {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 2.5rem;
            border: 1px solid var(--border-color);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .form-section {
            margin-bottom: 2.5rem;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-primary);
        }

        .section-title i {
            color: var(--primary-red);
        }

        .form-label {
            color: var(--text-primary);
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            background: var(--input-bg);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 10px;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            background: var(--input-bg);
            border-color: var(--primary-red);
            color: var(--text-primary);
            box-shadow: 0 0 0 0.2rem rgba(220, 38, 38, 0.25);
        }

        .form-control::placeholder {
            color: var(--text-secondary);
        }

        /* Avatar Upload */
        .avatar-upload {
            text-align: center;
            margin-bottom: 2rem;
        }

        .avatar-preview {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 4px solid var(--primary-red);
            object-fit: cover;
            margin-bottom: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .avatar-preview:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 25px rgba(220, 38, 38, 0.3);
        }

        .avatar-upload-btn {
            background: var(--primary-red);
            color: white;
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .avatar-upload-btn:hover {
            background: #b91c1c;
            transform: translateY(-2px);
        }

        .file-input {
            display: none;
        }

        /* Form Validation */
        .invalid-feedback {
            color: var(--primary-red);
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .is-invalid {
            border-color: var(--primary-red) !important;
        }

        .is-valid {
            border-color: var(--success-green) !important;
        }

        /* Action Buttons */
        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 0.75rem 2rem;
            border-radius: 25px;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            min-width: 150px;
            justify-content: center;
        }

        .btn-save {
            background: var(--success-green);
            color: white;
        }

        .btn-save:hover {
            background: #059669;
            transform: translateY(-2px);
            color: white;
        }

        .btn-cancel {
            background: var(--border-color);
            color: var(--text-secondary);
        }

        .btn-cancel:hover {
            background: #475569;
            color: var(--text-primary);
        }

        .btn-reset {
            background: var(--warning-yellow);
            color: var(--dark-bg);
        }

        .btn-reset:hover {
            background: #d97706;
            transform: translateY(-2px);
        }

        /* Loading State */
        .btn-loading {
            position: relative;
            pointer-events: none;
        }

        .btn-loading::after {
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            margin: auto;
            border: 2px solid transparent;
            border-top-color: currentColor;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        /* Success/Error Messages */
        .alert-custom {
            border-radius: 10px;
            border: none;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
        }

        .alert-success {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success-green);
            border-left: 4px solid var(--success-green);
        }

        .alert-danger {
            background: rgba(220, 38, 38, 0.1);
            color: var(--primary-red);
            border-left: 4px solid var(--primary-red);
        }

        
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="#">
                Ani<span class="text-danger">me</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Homepage</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Categories" asp-controller="Category">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Blogs" asp-controller="Blog">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Contact" asp-controller="Contact">Contacts</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-upgrade">Upgrade</button>
                    <i class="fas fa-search text-secondary"></i>
                    <div class="dropdown">
                        <i class="fas fa-user text-secondary dropdown-toggle" data-bs-toggle="dropdown" style="cursor: pointer;"></i>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item active" href="#">Edit Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-action="Logout" asp-controller="Account" method="post" class="dropdown-item m-0 p-0">
                                    <button type="submit" class="btn w-100 text-start">Logout</button>
                                </form>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Edit Profile Content -->
    <div class="edit-container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Chỉnh sửa hồ sơ</h1>
            <p class="page-subtitle">Cập nhật thông tin cá nhân và tùy chỉnh tài khoản của bạn</p>
        </div>

        <!-- Success/Error Messages -->
        <div id="alertContainer"></div>

        <!-- Edit Form -->
        <form class="edit-form" id="editProfileForm" method="post" enctype="multipart/form-data" asp-action="EditUserProfile" asp-controller="UserProfile">
            <!-- Avatar Section -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-camera"></i>
                    Ảnh đại diện
                </h3>
                <div class="avatar-upload">
                    <img src="/placeholder.svg?height=150&width=150" alt="Avatar" class="avatar-preview" id="avatarPreview">
                    <br>
                    <button type="button" class="avatar-upload-btn" onclick="document.getElementById('avatarInput').click()">
                        <i class="fas fa-upload"></i> Thay đổi ảnh
                    </button>
                    <input type="file" id="avatarInput" asp-for="AvatarUrl" class="file-input" accept="image/*">
                </div>
            </div>

            <!-- Personal Information -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-user"></i>
                    Thông tin cá nhân
                </h3>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="FullName" class="form-label">Họ và tên *</label>
                        <input type="text" class="form-control" id="fullName" asp-for="FullName" value="@Model.FullName" required>
                        <div class="invalid-feedback">Vui lòng nhập họ và tên</div>
                    </div>
                   
                </div>
            </div>

           

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn-action btn-save" id="saveBtn">
                    <i class="fas fa-save"></i>
                    Lưu thay đổi
                </button>
                <button type="button" class="btn-action btn-reset" id="resetBtn">
                    <i class="fas fa-undo"></i>
                    Khôi phục
                </button>
                <a href="#" class="btn-action btn-cancel">
                    <i class="fas fa-times"></i>
                    Hủy bỏ
                </a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>