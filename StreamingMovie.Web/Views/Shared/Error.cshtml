@using StreamingMovie.Web.Views.Shared.ViewModels
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1>Login Error</h1>

<div class="alert alert-danger" role="alert">
    Invalid login attempt. Please check your email and password and try again.
</div>

@if (Model != null && Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<a asp-controller="Account" asp-action="Login" class="btn btn-primary">Back to Login</a>
