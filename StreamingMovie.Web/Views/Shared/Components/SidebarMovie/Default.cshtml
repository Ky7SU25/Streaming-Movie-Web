@model List<StreamingMovie.Application.DTOs.TopViewMovieDTO>
@{
    var period = ViewBag.CurrentPeriod?.ToString()?.ToLower() ?? "day";
}

<div class="product__sidebar__view">
    <div class="section-title">
        <h5>Top Views</h5>
    </div>

    @* <ul class="filter__controls">
        <li class="@(period == "day" ? "active" : "")" data-filter=".day">Day</li>
        <li class="@(period == "week" ? "active" : "")" data-filter=".week">Week</li>
        <li class="@(period == "month" ? "active" : "")" data-filter=".month">Month</li>
        <li class="@(period == "years" ? "active" : "")" data-filter=".years">Years</li>
    </ul> *@

    <div class="filter__gallery">
        @foreach (var movie in Model)
        {
            <div class="product__sidebar__view__item set-bg mix @period"
                 data-setbg="@movie.PosterUrl">
                <div class="ep">
                    @(movie.IsSeries ? $"{movie.TotalEpisodes ?? 0} / ?" : $"{movie.Duration ?? 0} min")
                </div>
                <div class="view">
                    <i class="fa fa-eye"></i> @(movie.ViewCount ?? 0)
                </div>
                <h5>
                    <a href="/movies/@movie.Slug">@movie.Title</a>
                </h5>
            </div>
        }
    </div>
</div>
