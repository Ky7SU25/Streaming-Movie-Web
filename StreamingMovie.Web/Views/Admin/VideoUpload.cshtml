<script>
        $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: '/Admin/MonthlyViews',
            success: function (response) {
                console.log('Line Chart Data:', response);
                renderLineChart(response.labels, response.data);
            },
            error: function (xhr, status, error) {
                console.error("Failed to load line chart data: lỗi", error);
            }
        });

        function renderLineChart(labels, data) {
            const ctx = document.getElementById('chart-line11').getContext('2d');

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,   // ví dụ: ["Jan", "Feb", "Mar", ...]
                    datasets: [{
                        label: 'Views per Month',
                        data: data,     // ví dụ: [120, 200, 150, ...]
                        fill: false,
                        borderColor: 'rgba(54, 162, 235, 1)',
                        backgroundColor: 'rgba(54, 162, 235, 0.6)',
                        tension: 0.3,
                        pointBackgroundColor: 'rgba(54, 162, 235, 1)',
                        pointRadius: 4,
                        pointHoverRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: "Revenue"
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: "Month"
                            }
                        }
                    }
                }
            });
        }
    });
