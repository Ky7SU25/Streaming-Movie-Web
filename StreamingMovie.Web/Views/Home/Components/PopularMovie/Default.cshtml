@using StreamingMovie.Application.DTOs
@using StreamingMovie.Domain.Enums
@model IEnumerable<UnifiedMovieDTO>

<div class="popular__product">
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8">
            <div class="section-title">
                <h4>Popular</h4>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <div class="btn__all">
                <a href="@Url.Action("Filter", "Movie", new { OrderBy = MovieSortOption.ViewCount })" class="primary-btn">
                    View All
                    <span class="arrow_right"></span>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var movie in Model)
        {
            @await Html.PartialAsync("ViewPartials/_MovieCardPartial", movie)
        }
    </div>
</div>