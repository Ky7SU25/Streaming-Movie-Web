@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>404 - Page not found</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&family=Mulish:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #070720, #0A0F24);
            color: white;
            font-family: 'Mulish', sans-serif;
            padding: 100px 20px;
        }

        .error-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .error-code {
            font-size: 160px;
            font-weight: 700;
            color: #AA0000;
            font-family: 'Oswald', sans-serif;
        }

        .error-message {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .error-description {
            font-size: 16px;
            margin-bottom: 40px;
        }

        .home-link {
            color: white;
            font-size: 18px;
            font-weight: bold;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .home-link:hover {
                color: #AA0000;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-code">404</div>
        <div class="error-message">Page not found</div>
        <p class="error-description">Sorry! The page you requested does not exist or has been deleted.</p>
        <p><a href="/" class="home-link">Back to Homepage</a></p>
    </div>
</body>
</html>
