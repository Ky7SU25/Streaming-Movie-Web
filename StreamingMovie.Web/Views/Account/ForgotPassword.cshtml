@model StreamingMovie.Web.Views.Account.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="@Url.Content("~/img/slider-bg.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Forgot Password</h2>
                    <p>Enter your email to receive password reset instructions.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->

<section class="login spad">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Reset Your Password</h3>

                    @if (TempData["ForgotPasswordSuccess"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["ForgotPasswordSuccess"]
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="input__item">
                            <input asp-for="Email" class="form-control" placeholder="Email address" />
                            <span class="icon_mail"></span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <button type="submit" class="site-btn">Send Reset Link</button>
                    </form>

                    <a asp-action="Login" asp-controller="Account" class="mt-3 d-inline-block text-white">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
