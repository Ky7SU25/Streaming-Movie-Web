@model StreamingMovie.Web.Views.Account.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="@Url.Content("~/img/slider-bg.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Reset Password</h2>
                    <p>Please enter your new password below.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Reset Password Section Begin -->
<section class="login spad">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Reset Your Password</h3>

                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Code" />

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="input__item">
                            <input asp-for="Password" placeholder="New Password" class="form-control" />
                            <span class="icon_lock"></span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <div class="input__item">
                            <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                            <span class="icon_lock"></span>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        <button type="submit" class="site-btn">Reset Password</button>
                    </form>

                    <a asp-action="Login" asp-controller="Account" class="mt-3 d-inline-block text-white">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Reset Password Section End -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
