@using StreamingMovie.Web.Views.Account.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="@Url.Content("~/img/slider-bg.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Sign Up</h2>
                    <p>Welcome to the official Anime blog.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->

<!-- Signup Section Begin -->
<section class="signup spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Sign Up</h3>
                    @if (TempData["RegisterSuccess"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["RegisterSuccess"]
                        </div>
                    }
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <form asp-action="Register" method="post">
                        <span asp-validation-for="UserName" class="text-danger position-relative"></span>
                        <div class="input__item">
                            <input asp-for="UserName" placeholder="User name" class="form-control" required />
                            <span class="icon_profile"></span>
                        </div>

                        <span asp-validation-for="Email" class="text-danger position-relative"></span>
                        <div class="input__item">
                            <input asp-for="Email" placeholder="Email address" class="form-control" required />
                            <span class="icon_mail"></span>
                        </div>
                        
                        <span asp-validation-for="Password" class="text-danger position-relative"></span>
                        <div class="input__item">
                            <input asp-for="Password" placeholder="Password" class="form-control" required />
                            <span class="icon_lock"></span>
                        </div>

                        <span asp-validation-for="ConfirmPassword" class="text-danger position-relative"></span>
                        <div class="input__item">
                            <input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-control" required />
                            <span class="icon_lock"></span>
                        </div>

                        <button type="submit" class="site-btn">Sign Up</button>
                    </form>
                    <h5>Already have an account? <a asp-action="Login" asp-controller="Account">Log In!</a></h5>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__social__links">
                    <h3>Login With:</h3>
                    <ul>
                        <li>
                            <a href="#" class="facebook"><i class="fa fa-facebook"></i> Sign in With Facebook</a>
                        </li>
                        <li><a href="#" class="google"><i class="fa fa-google"></i> Sign in With Google</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Signup Section End -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}